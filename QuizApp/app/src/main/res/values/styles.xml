<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RadioGroup" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RadioButton" parent="AppTheme">
        <item name="android:textSize">@dimen/radiobutton_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CheckBox" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CheckBox2" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/baseTextColor</item>
        <item name="android:buttonTint">@color/baseTextColor</item>
    </style>

    <style name="ImageView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="QuestionLayoutStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/bigone</item>
        <item name="android:background">@drawable/shadow_background</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:padding">@dimen/question_margin_bottom</item>
    </style>

    <style name="QuestionLayoutStyle2" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/bigone</item>
        <item name="android:background">@drawable/shadow_background2</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:padding">@dimen/question_margin_bottom</item>
    </style>

    <style name="QuestionLayoutStyle3" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/bigone</item>
        <item name="android:background">@drawable/shadow_background</item>
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:padding">@dimen/question_margin_bottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="QuestionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/question_margin_bottom</item>
    </style>

    <style name="QuestionTextView2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/question_margin_bottom</item>
        <item name="android:textColor">@color/baseTextColor</item>
    </style>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:padding">@dimen/question_margin_bottom</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="RadioLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="OverCheckBoxLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="CheckBoxLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="EditText" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="MainLinearLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LogoImageView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/logo4</item>
    </style>

    <style name="LogoTextView" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@color/logoTextViewColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/logo_padding</item>
        <item name="android:paddingBottom">@dimen/logo_padding</item>
        <item name="android:textColor">@color/baseTextColor</item>
        <item name="android:textSize">@dimen/logo_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainQuestionLinearLayout" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/question_margin_bottom</item>
        <item name="android:background">@color/questionBackground</item>
    </style>

    <style name="PadawanTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/padavan_text</item>
    </style>

    <style name="MessageTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/question_margin_bottom</item>
        <item name="android:paddingTop">@dimen/question_margin_bottom</item>
    </style>

    <style name="FalconImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/falcon_height</item>
        <item name="android:src">@drawable/falcon</item>
    </style>

    <style name="LogoRelativeLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/logo_height</item>
    </style>


</resources>